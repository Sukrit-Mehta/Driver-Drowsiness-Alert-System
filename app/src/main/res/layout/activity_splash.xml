<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.sukrit.driverdrowsinessalertsystem.Activities.SplashScreenActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
    <ImageView
        android:id="@+id/carCrash"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/carcrashblack" />

    <TextView
        android:layout_below="@+id/carCrash"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="24sp"
        android:textAllCaps="false"
        android:textSize="23sp"
        android:text="Driver Drowsiness Alert System"
        android:textColor="#ffffff"/>
    </RelativeLayout>

</RelativeLayout>
